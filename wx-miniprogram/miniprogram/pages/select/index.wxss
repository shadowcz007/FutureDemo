.bg_contain {
  /* background-image: url('./image_demo.jpg'); */
  height: 100vh;
  background-size: cover;
}

.blur {
  background: rgb(0 0 0 / 45%);
  backdrop-filter: blur(10px);
  height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  margin-top: 44px;
  align-items: center;
  justify-content: center
}

.header image {
  width: 100px;
  height: 100px;
  border-radius: 100%;
  position: relative;
  animation: rotatearound 98s linear infinite;
  box-shadow: 0 0 4px 0 rgba(255, 255, 255, 0.5) linear-gradient(to bottom, #f00, #fcc, #00f);
}

.header .title {
  font-size: 20px;
  font-weight: 300;
  color: #ffffff;
  line-height: 18px;
}

.header .text {
  font-size: 16px;
  font-weight: bold;
  color: #ffffff;
  line-height: 24px;
}


@keyframes rotatearound {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.avatar_card {
  margin: 24px;
}

.name {
  font-size: 13px;
  color: #efefef;
  font-weight: 800;
}

.talk {
  font-size: 11px;
  color: #fff;
  font-style: italic;
}

button {
  background-color: #8eca8e;
  color: #3a2c2c;
  border-radius: 55px!important;
  text-align: left;
}